.container {
  background: #fff;
}

.img {
  width: 100%;
  height: 450rpx;
  margin-top: -200rpx;
  background-color: #dadada;
}

.desc_image {
  width: 65%;
  height: 80%;
  margin: 7% auto;
  display: flex;
  justify-content: center;
  overflow: hidden;    
  border-radius: 5%;
}

.title {
  font: bold medium;
  margin: 40rpx;
