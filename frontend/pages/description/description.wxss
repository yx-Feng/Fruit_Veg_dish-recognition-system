  text-align:center;
}

.description{
  width: 86%;
  padding:3%;
  margin: auto;
  justify-content: space-between;
  border: 1px solid hsl(0, 0%, 85%);
  margin-top: 20rpx;
  border-radius: 10rpx;
  min-height: 200px;
}